{
  "name": "bitcoin-bazaar",
  "version": "1.0.0",
  "description": "The first Bitcoin-native NFT marketplace with sBTC integration",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "preview": "next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clarinet:check": "clarinet check",
    "clarinet:console": "clarinet console",
    "clarinet:devnet": "clarinet devnet start",
    "clarinet:deploy:testnet": "clarinet deployments generate --testnet --medium-cost && clarinet deployments apply --testnet",
    "clarinet:deploy:mainnet": "clarinet deployments generate --mainnet --high-cost && clarinet deployments apply --mainnet",
    "deploy:testnet": "bash scripts/deploy-production.sh testnet medium-cost",
    "deploy:mainnet": "bash scripts/deploy-production.sh mainnet high-cost",
    "setup": "bash scripts/setup.sh",
    "clean": "rm -rf node_modules .cache",
    "reset": "npm run clean && npm install",
    "docs": "typedoc --out docs src/",
    "docs:serve": "serve docs",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run clarinet:check",
    "ci": "npm run validate",
    "precommit": "npm run validate",
    "release": "npm run ci && npm version patch && git push && git push --tags"
  },
  "author": "Vaios0x",
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "stacks",
    "nft",
    "marketplace",
    "sbtc",
    "defi",
    "clarity",
    "blockchain",
    "web3"
  ],
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.2",
    "@stacks/blockchain-api-client": "^7.0.6",
    "@stacks/connect": "^7.0.6",
    "@stacks/network": "^7.0.6",
    "@stacks/transactions": "^7.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.546.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.0.0",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "three": "^0.180.0",
    "typescript": "^5.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "serve": "^14.0.0",
    "typedoc": "^0.25.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bitcoin-bazaar.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bitcoin-bazaar/issues"
  },
  "homepage": "https://github.com/your-username/bitcoin-bazaar#readme"
}
